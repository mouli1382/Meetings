<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/Preference</item>
    </style>

    <style name="AppTheme.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Background">
        <item name="android:windowBackground">@color/primary_dark_material_light</item>
        <item name="android:colorBackground">@color/primary_dark_material_light</item>
    </style>

    <style name="NavDrawerTheme" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>


